<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <vn.nip.aroundshipper.Custom.CustomTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="fafsdf"
            android:textAllCaps="true"

            android:textSize="20sp"
            android:visibility="gone" />

        <vn.nip.aroundshipper.Custom.CustomTextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:inputType="textMultiLine"
            android:text="fafafaffafafaffafafaffafafaffafafaffafafaffafafaffafafaffafafaffafafaffafafaffafafaffafafaffafafaffafafaffafafaffafafaf"
            android:textSize="16sp" />

        <android.support.v7.widget.CardView
            android:id="@+id/ok"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:foreground="?android:selectableItemBackground"
            android:visibility="visible"
            app:cardBackgroundColor="@color/main"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <vn.nip.aroundshipper.Custom.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/ok"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:fontName="OpenSans_Light" />
        </android.support.v7.widget.CardView>


    </LinearLayout>
</FrameLayout>
