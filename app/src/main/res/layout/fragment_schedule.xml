<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="Fragment.ScheduleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <vn.nip.aroundshipper.Custom.CustomButton
                            android:id="@+id/tab_1"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:background="@drawable/border_bottom_main"
                            android:padding="0dp"
                            android:text="NEW"
                            android:textAllCaps="false"
                            android:textColor="@color/gray_900"
                            android:textSize="14sp"
                            app:fontName="OpenSans_SemiBold" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <vn.nip.aroundshipper.Custom.CustomButton
                            android:id="@+id/tab_2"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:background="@drawable/border_bottom_gray_400"
                            android:padding="0dp"
                            android:text="NEW"
                            android:textAllCaps="false"
                            android:textColor="@color/gray_400"
                            android:textSize="14sp"
                            app:fontName="OpenSans_SemiBold" />
                    </FrameLayout>

                </LinearLayout>

                <android.support.v4.widget.SwipeRefreshLayout
                    android:id="@+id/refresher"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

                </android.support.v4.widget.SwipeRefreshLayout>

            </LinearLayout>

            <vn.nip.aroundshipper.Custom.CustomTextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="@string/empty_all_schedule"
                android:padding="32dp"
                android:layout_marginTop="32dp"
                android:textColor="@color/gray_400"
                android:textSize="20sp"
                android:visibility="gone" />

            <include layout="@layout/progress" />
        </FrameLayout>
    </LinearLayout>

</FrameLayout>
