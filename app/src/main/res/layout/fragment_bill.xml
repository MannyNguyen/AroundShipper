<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context="Fragment.BillFragment">

    <View
        android:id="@+id/outside"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.3"
        android:background="@color/black" />

    <vn.nip.aroundshipper.Custom.CustomCardView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        android:background="@drawable/border_gray_dash_400"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <vn.nip.aroundshipper.Custom.CustomTextView
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:inputType="textMultiLine"
                            android:visibility="visible"
                            android:text="@string/title_verify_code"
                            android:textColor="@color/gray_600"
                            android:textSize="13sp" />

                        <vn.nip.aroundshipper.Custom.CustomEditText
                            android:id="@+id/verify_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/border_verify_code"
                            android:gravity="center"
                            android:inputType="number"
                            android:padding="8dp"
                            android:textColor="@color/gray_900"
                            android:textSize="18sp" />

                        <vn.nip.aroundshipper.Custom.CustomTextView
                            android:id="@+id/message_verify_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:inputType="textMultiLine"
                            android:text="@string/invalid_verify_code"
                            android:textColor="@color/red_500"
                            android:textSize="10sp"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                          android:layout_marginTop="4dp"
                            android:orientation="horizontal">

                            <vn.nip.aroundshipper.Custom.CustomEditText
                                android:id="@+id/common_note"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/border_gray_400"
                                android:gravity="left|top"
                                android:hint="@string/note"
                                android:layout_marginTop="4dp"
                                android:maxLines="2"
                                android:minLines="2"
                                android:padding="8dp"
                                android:textColor="@color/gray_900"
                                android:textColorHint="@color/gray_400"
                                android:textSize="12sp" />
                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"

                                android:layout_marginLeft="8dp">

                                <ImageView
                                    android:id="@+id/common_camera"
                                    android:layout_width="60dp"
                                    android:layout_height="match_parent"
                                    android:adjustViewBounds="true"
                                    android:layout_marginTop="4dp"
                                    android:foreground="?selectableItemBackground"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/ic_image_bill" />

                                <ImageView
                                    android:id="@+id/common_remove"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_gravity="right"
                                    android:adjustViewBounds="true"
                                    android:foreground="?selectableItemBackground"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/ic_remove_image_supplier" />
                            </FrameLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="12dp"
                        android:layout_weight="1">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:visibility="gone"
                            android:overScrollMode="never"
                            tools:listitem="@layout/row_bill"></android.support.v7.widget.RecyclerView>
                    </FrameLayout>


                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <vn.nip.aroundshipper.Custom.CustomButton
                    android:id="@+id/cancel"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_button_black"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/gray_900"
                    android:textSize="12sp" />

                <vn.nip.aroundshipper.Custom.CustomButton
                    android:id="@+id/confirm"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:background="@color/main"
                    android:text="@string/confirm"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/popup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:visibility="gone">

            <FrameLayout
                android:id="@+id/outside_popup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.5"
                android:background="@color/black"
                android:clickable="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/open_camera"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_camera" />

                <ImageView
                    android:id="@+id/open_gallery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_image" />
            </LinearLayout>
        </FrameLayout>

    </vn.nip.aroundshipper.Custom.CustomCardView>

    <vn.nip.aroundshipper.Custom.CustomCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:visibility="visible"
        app:cardBackgroundColor="@android:color/transparent">

        <include layout="@layout/progress" />

    </vn.nip.aroundshipper.Custom.CustomCardView>

</FrameLayout>
