<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/border_gray_400"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="8dp">

        <vn.nip.aroundshipper.Custom.CustomTextView
            android:id="@+id/order_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:maxLines="1"
            android:text="AOIDXXXX"
            android:textColor="@color/gray_600"
            android:textSize="10sp"
            app:fontName="OpenSans_Regular" />

        <vn.nip.aroundshipper.Custom.CustomTextView
            android:id="@+id/order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:maxLines="1"
            android:text="22/6/2018"
            android:textColor="@color/gray_600"
            android:textSize="10sp"
            app:fontName="OpenSans_Regular" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:orientation="vertical">

        <vn.nip.aroundshipper.Custom.CustomTextView
            android:id="@+id/address_receiver"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="Địa chỉ giao hàng"
            android:textColor="@color/gray_600"
            android:textSize="11sp"
            android:ellipsize="end"
            app:fontName="OpenSans_Regular" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="end"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:layout_marginRight="4dp">

        <vn.nip.aroundshipper.Custom.CustomTextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:maxLines="1"
            android:text="Hoàn thành"
            android:textColor="@color/green_600"
            android:textSize="10sp"
            app:fontName="OpenSans_Regular" />

        <vn.nip.aroundshipper.Custom.CustomTextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:maxLines="1"
            android:text="1.500.000đ"
            android:textColor="@color/gray_600"
            android:textSize="10sp"
            app:fontName="OpenSans_Regular" />

    </LinearLayout>

</LinearLayout>