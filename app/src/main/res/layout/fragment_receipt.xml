<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_50"
    tools:context=".Fragment.ReceiptFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_close" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="64dp"
                    android:orientation="horizontal">

                    <vn.nip.aroundshipper.Custom.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="@string/shipping_fee"
                        android:textColor="@color/gray_400"
                        android:textSize="12dp" />

                    <vn.nip.aroundshipper.Custom.CustomTextView
                        android:id="@+id/shipping_fee"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="@color/gray_600"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        app:fontName="OpenSans_SemiBold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="64dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <vn.nip.aroundshipper.Custom.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="@string/pay_on_behaft"
                        android:textColor="@color/gray_400"
                        android:textSize="12dp" />

                    <vn.nip.aroundshipper.Custom.CustomTextView
                        android:id="@+id/item_cost"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="@color/gray_600"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        app:fontName="OpenSans_SemiBold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="64dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <vn.nip.aroundshipper.Custom.CustomTextView
                        android:id="@+id/textView2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="@string/service_fee"
                        android:textColor="@color/gray_400"
                        android:textSize="12dp" />

                    <vn.nip.aroundshipper.Custom.CustomTextView
                        android:id="@+id/service_fee"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="@color/gray_600"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        app:fontName="OpenSans_SemiBold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="64dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <vn.nip.aroundshipper.Custom.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="@string/return_pickup"
                        android:textColor="@color/gray_400"
                        android:textSize="12dp" />

                    <vn.nip.aroundshipper.Custom.CustomTextView
                        android:id="@+id/return_fee"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="@color/gray_600"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        app:fontName="OpenSans_SemiBold" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:src="@drawable/line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="64dp"
                    android:orientation="horizontal">

                    <vn.nip.aroundshipper.Custom.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="@string/total"
                        android:textColor="@color/gray_600"
                        android:textSize="16dp"
                        app:fontName="OpenSans_SemiBold" />

                    <vn.nip.aroundshipper.Custom.CustomTextView
                        android:id="@+id/total"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="@color/main"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:fontName="OpenSans_SemiBold" />
                </LinearLayout>

                <vn.nip.aroundshipper.Custom.CustomButton
                    android:id="@+id/finish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="64dp"
                    android:layout_marginRight="64dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/button_main"
                    android:foreground="?android:selectableItemBackground"
                    android:padding="12dp"
                    android:text="@string/finish"
                    android:textAllCaps="false"

                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:fontName="OpenSans_Light" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>
